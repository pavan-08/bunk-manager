<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#eeeeee">
    <RelativeLayout
        android:id="@+id/subjectCard"
        android:layout_width="match_parent"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginStart="3dp"
        android:clickable="true"
        android:background="#fff"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="?attr/selectableItemBackground"
        android:id="@+id/relativeLayout">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#000"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:elevation="10dp"
            android:id="@+id/button"
            style="?android:attr/buttonStyleSmall"
            android:background="#C8E6C9"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/button2"
            android:layout_toStartOf="@+id/button2" />

        <Button
            android:layout_width="wrap_content"
            style="?android:attr/buttonStyleSmall"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"

            android:layout_height="wrap_content"
            android:text="0"
            android:elevation="10dp"
            android:textColor="#000"
            android:background="#FFCDD2"
            android:id="@+id/button2"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:textSize="10dp"
            android:text="Attended"
            android:id="@+id/textView8"
            android:layout_below="@+id/button"
            android:layout_alignRight="@+id/button"
            android:layout_alignEnd="@+id/button"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:textSize="10dp"
            android:text="Bunked"
            android:id="@+id/textView13"
            android:layout_below="@+id/button2"
            android:layout_alignRight="@+id/button2"
            android:layout_alignEnd="@+id/button2" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:background="@drawable/center_circle"
            android:id="@+id/centerCircle"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/rectangle"
            android:layout_below="@id/centerCircle"
            android:layout_marginLeft="21dp"
            android:id="@+id/lowerRectangle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Add Subject"
            android:textColor="#000000"
            android:layout_alignParentTop="true"
            android:textSize="20sp"
            android:id="@+id/textView"
            android:layout_toLeftOf="@id/button"
            android:layout_toRightOf="@+id/centerCircle"
            android:layout_toEndOf="@+id/centerCircle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Attend necessarily"
            android:textColor="@color/material_red"
            android:textStyle="bold"
            android:textSize="15sp"
            android:visibility="gone"
            android:id="@+id/textView6"
            android:layout_below="@id/textView"
            android:layout_alignBottom="@+id/textView8"
            android:layout_toLeftOf="@+id/button"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView" />

    </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>