<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#eee">
    <android.support.v7.widget.CardView
        android:id="@+id/planner_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        app:cardCornerRadius="0dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/planner_upper_line"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:background="@drawable/rectangle"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"/>
            <ImageView
                android:id="@+id/planner_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginRight="8dp"
                android:layout_below="@id/planner_upper_line"
                android:layout_marginEnd="8dp"
                android:background="@drawable/center_circle"/>
            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/show_more_less"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@android:color/transparent"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:src="@drawable/ic_expand_more_black_24dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@id/planner_circle"
                android:layout_toEndOf="@id/planner_circle"
                android:layout_toLeftOf="@id/show_more_less"
                android:layout_toStartOf="@id/show_more_less"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                android:id="@+id/planner_recycler_date"
                android:textSize="25sp"
                android:textColor="#000"
                android:text="DATE"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/planner_circle"
                android:layout_toEndOf="@id/planner_circle"
                android:minHeight="0dp"
                android:textSize="20sp"
                android:layout_toLeftOf="@id/show_more_less"
                android:layout_toStartOf="@id/show_more_less"
                android:id="@+id/more_text_view"
                android:layout_below="@id/planner_recycler_date"
                />
            <ImageView
                android:id="@+id/planner_lower_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/planner_circle"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/rectangle"
                android:layout_alignBottom="@id/more_text_view"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.design.widget.CoordinatorLayout>